.container {
  min-height: 100vh;
  background: #f5f5f5;
  margin-bottom: 60px;
}


.search-bar-container {
  margin-top: 0;
  background: linear-gradient(to bottom, #4392F9, #f5f5f5);
}

.search-bar {
  padding-top: 12px;
  padding: 12px;
  margin-left: 16px;
  margin-right: 16px;
  display: flex;
  gap: 12px;

}

.search-input {
  height: 36px;
  background: #fff;
  border-radius: 18px;
  display: flex;
  align-items: center;
  padding-left: 12px;
  padding-right: 12px;
}

.search-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
}

.search-button-1 {
  padding: 0 16px;
  height: 32px;
  background: #4392F9;
  color: #fff;
  border-radius: 18px;
  font-size: 14px;
  display: flex;
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  }

.category-grid {
  padding: 16px;
  /* margin-top: 6px; */
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12px;
  background: #fff;

}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap:6px ;
}

.category-icon {
  width: 32px;
  height: 32px;
}
.category-name {
  font-size: 12px;
  color: #333;
}

.category-desc {
  font-size: 10px;
  color: #999;
}

.promo-tags {
  padding: 12px 0;
  background: #fff;
  margin-top: 8px;
}

.tag-scroll {
  white-space: nowrap;
  overflow-x: auto;
  padding: 0 16px;
}

.tag-item {
  display: inline-block;
  margin-right: 8px;
  padding: 4px 12px;
  background: #f5f5f5;
  border-radius: 16px;
  font-size: 12px;
  color: #666;
}

.product-list {
  margin-top: 8px;
  padding: 16px;
  background: #fff;
}

.product-banner {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 16px;
}

.product-banner image {
  width: 100%;
  height: 200px;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16px;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
}

.banner-title {
  font-size: 18px;
  font-weight: bold;
}

.banner-subtitle {
  font-size: 14px;
  margin-top: 4px;
}

.banner-button {
  margin-top: 8px;
  padding: 4px 12px;
  background: #ff6b00;
  color: #fff;
  border-radius: 16px;
  font-size: 12px;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.product-item {
  position: relative;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.product-tag {
  position: absolute;
  top: 8px;
  left: 8px;
  padding: 2px 6px;
  background: #fff;
  border-radius: 4px;
  font-size: 10px;
  color: #333;
}

.product-image {
  width: 100%;
  height: 160px;
}

.product-info {
  padding: 1px;
}

.product-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8px;
}

.price-symbol {
  font-size: 12px;
  color: #ff4d4f;
}

.price-amount {
  font-size: 20px;
  font-weight: bold;
  color: #ff4d4f;
}

.price-unit {
  font-size: 12px;
  color: #999;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
}

.tag {
  padding: 2px 6px;
  background: #f5f5f5;
  border-radius: 4px;
  font-size: 10px;
  color: #666;
}lbt
/* 产品 轮播图*/
.carousel-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.product-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.product-item image {
  width: 100%;
  height: 100%;
}

.product-info {
  position: absolute;
  height: 52px;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(172, 169, 169, 0.6);
  padding-left:26rpx;
}

.product-name {
  padding-top: 5px;
  color: #ffffff;
  font-size: 28rpx;
  /* margin-bottom: 10rpx; */
  display: block;
}

.product-price {
  color: #ff6600;
  font-size: 32rpx;
  font-weight: bold;
}

.custom-indicators {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  display: flex;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  margin: 0 8rpx;
  transition: all 0.3s ease;
}

.indicator.active {
  background-color: #ffffff;
  transform: scale(1.2);
}

/* 产品列表 */
.product-container {
  padding: 20rpx;
  background: #f5f5f5;
}

.productsList-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.productsList-item {
  width: calc(50% - 10rpx);
}

.productsList-card {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.productsList-image {
  width: 100%;
  height: 300rpx;
  background: #fff;
}

.productsList-info {
  padding: 16rpx;
}

.productsList-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.tag {
  background: #f8f8f8;
  color: #666;
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.productsList-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.price-section {
  display: flex;
  align-items: baseline;
  margin: 8rpx 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff4d4f;
}

.price-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.price-unit {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-left: 4rpx;
}

.rental-info {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.rental-text {
  color: #999;
  font-size: 24rpx;
}

.more-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  color: #666;
  font-size: 24rpx;
}

.arrow {
  color: #999;
}

